escape ^s^s
startup_message off
#hardstatus alwayslastline "[screen] %w"
#hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"
hardstatus alwayslastline " %`%-w%{=b bw}%n %t%{-}%+w"
encoding utf8
defscrollback 1024

bind r eval 'echo Resize window' 'command -c resize'
bind -c resize ^] command
bind -c resize k eval 'resize +1' 'command -c resize'
bind -c resize j eval 'resize -1' 'command -c resize'
bind -c resize l eval 'resize +1' 'command -c resize'
bind -c resize h eval 'resize -1' 'command -c resize'
#caption always “%{b RK} %y/%m/%d(%D)%c:%s %{bu dr} | %-w%{=bu CK}%n %t%{-}%+w”

# prevent xon/off from being sent
bind s
bind ^s
bind q
bind ^q

# prevent flow control mode from being changed
bind f
bind ^f

bind _ resize max
bind = resize =

bind w focus
bind j focus down
bind l focus down
bind k focus up
bind h focus up
bind K kill

shelltitle "$ |bash"
vbell off

defflow off
term screen-256color

deflog on
logfile .screen-logs/%Y%m%d.%S.%n.log
logtstamp on
logtstamp string "\n-- SCREEN [%Y/%m/%d %02c:%s] %n:%t --\n"
