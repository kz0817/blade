[core]
	pager = less
	editor = vim
[push]
	default = simple
[color]
	ui = auto

[diff]
	compactionHeuristic = true

[color "diff"]
	commit = yellow bold
	meta = 111
	frag = 117
	old = 217
	new = 118

[color "status"]
	added = 118
	changed = 214
	untracked = 117
	unmerged = 214

[color "decorate"]
	head = 123
	branch = 22 252 reverse
	remotebranch = 89 253 reverse
	tag = 214 16 reverse

[color "branch"]
	current = 118
	branch = white
	remote = 117

[log]
	graphColors = 250,217,112,220,75,141

[include]
	path = .gitconfig.local

[color "diff-highlight"]
	oldNormal = 217
	oldHighlight = 253 88
	newNormal = 118
	newHighlight = 254 22

[alias]
	log1=log --graph --date=format-local:'%y-%m-%d %H:%M' --pretty=tformat:'%C(112)%h %Creset%C(111)%ad %Creset%s %C(30)%an  %C(auto)%D%Creset'
	loga=log --graph --pretty=format:'%C(112)%h %C(auto)%D%n%Creset%s%n%C(111)%ai %C(30)%an <%ae>%n'
	logb=log --graph --pretty=format:'%C(112)%h %C(auto)%D%n%Creset%s%n%C(111)%ai %C(30)%an <%ae>%n%C(109)%ci %C(65)%cn <%ae>%n'
